@rendermode InteractiveAuto
@* @rendermode @(new InteractiveAutoRenderMode(prerender: true)) *@

@page "/RenderTest"
@using MudBlazorWebApp
@inject IMessageController mc;

<h3>RenderTest</h3>


<PageTitle>Home</PageTitle>

<h1>Hello, @handler!</h1>

  <h2>@result</h2>


@code
{
    string handler;
    string result = "NA";
    
    protected override void OnInitialized ()
    {
        if (OperatingSystem.IsBrowser())
        {
            handler = "WASM";
            result = mc.AnnounceMessage(); 
            this.StateHasChanged();
        }
        else
        {
            handler = "Server";
            result = mc.AnnounceMessage();
            this.StateHasChanged();
        }
        
      
        
    }
}